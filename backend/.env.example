# Backend environment variables

# Server
PORT=5000

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/asset_access_control?schema=public

# Auth
JWT_SECRET=replace-with-a-long-random-secret
JWT_EXPIRES_IN=1d

# CORS
ALLOWED_ORIGIN=http://localhost:5173

# Rate limiting (defaults apply if omitted)
RATE_LIMIT_WINDOW_MS=900000           # 15 minutes
RATE_LIMIT_MAX=300                    # 300 requests per window per IP

AUTH_RATE_LIMIT_WINDOW_MS=300000      # 5 minutes
AUTH_RATE_LIMIT_MAX=20                # 20 requests per window per IP (login endpoints)
