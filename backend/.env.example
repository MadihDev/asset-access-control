# Backend environment variables

# Server
PORT=5000

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/asset_access_control?schema=public

# Auth
JWT_SECRET=replace-with-a-long-random-secret
JWT_EXPIRES_IN=1d

# CORS
ALLOWED_ORIGIN=http://localhost:5173
WS_CORS_ORIGIN=http://localhost:5173

# Rate limiting (defaults apply if omitted)
RATE_LIMIT_WINDOW_MS=900000           # 15 minutes
RATE_LIMIT_MAX=300                    # 300 requests per window per IP

AUTH_RATE_LIMIT_WINDOW_MS=300000      # 5 minutes
AUTH_RATE_LIMIT_MAX=20                # 20 requests per window per IP (login endpoints)

# Bulk operations
MAX_LOCATION_BULK_ITEMS=500           # Max items allowed in one bulk request
BULK_RATE_LIMIT_WINDOW_MS=60000       # 1 minute
BULK_RATE_LIMIT_MAX=10                # Max bulk requests per window per IP

# Dev simulation routes (admin only)
ENABLE_SIM_ROUTES=false
